{{#section 'script'}}
<script src="/scripts/editBook.js" defer></script>
{{/section}}

<h2>Update Inventory</h2>


<table class="table">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Year</th>
            <th scope="col">Subject</th>
            <th scope="col">Copies</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        {{#each books}}
        <tr id="row-{{_id}}">
            <td>{{title}}</td>
            <td>{{author}}</td>
            <td>{{year}}</td>
            <td>{{subject}}</td>
            <td id="copies-{{_id}}">
                {{copies}}
            </td>
            <td id="input-{{_id}}" style="display:none"><input class="form-control form-control-sm" type="number"
                    value="{{copies}}" min="1">
            </td>
            <td>
                <button class="btn btn-primary editBtn" data-book="{{_id}}">Edit</button>
                <button class="btn btn-danger deleteBtn" data-toggle="modal" data-target="#modal"
                    data-book="{{_id}}">Delete</button>
            </td>
        </tr>

        {{/each}}

    </tbody>
</table>



<!-- Bootstrap Modal to confirm book deletion -->
<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="deleteBookModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete Book</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this book?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal" data-book=""
                    id="confirmDelete">Delete Book</button>
            </div>
        </div>
    </div>
</div>